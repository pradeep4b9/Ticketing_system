<table class="ui compact small padded table pure segment sortable">
  <thead>
    <tr>
      <th>Name</th>
      <th class="text-center">Owner</th>
      <th class="text-center">Members</th>
    </tr>
  </thead>

  <tbody>
    <% @businesses_all.each do |business| %>
      <tr>
        <td><%= link_to business.name, business, { :class => 'table_link'} %></td>
        <td class="text-center"><%= business.owner.lastname + ', ' + business.owner.firstname if business.owner %></td>
        <td class="text-center">
          <div class="ui circular teal label">
            <%= business.users.count %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="6">
        <div class="row">  
          <div class="ui two column grid">
            <div class="column">
              <div class="info-pagination">
                <%= page_entries_info @businesses_all %>
              </div>
              <%= will_paginate @businesses_all %>
            </div>
            <div class="column right aligned">
              <%= link_to '<i class="plus icon"></i> New Business'.html_safe(), 
                new_business_path, { :class => "ui small teal icon labeled button"} %>
            </div>
          </div>
        </div>
      </th>
    </tr>
  </tfoot>
</table>