<table class="ui compact small padded table pure segment sortable">
  <thead>
    <tr>
      <th class="text-center">Group</th>
      <th class="text-center">Members</th>
      <th class="text-center">Owner</th>
    </tr>
  </thead>

  <tbody>
    <% @groups_all.each do |group| %>
      <tr>
        <td><%= link_to group.name, 
                group, 
                { :class => 'table_link'} 
                %>
        </td>
        <td class="text-center">
          <div class="ui circular teal label">
            <%= group.users ? 
                group.users.count : 
                "-" 
                %>
          </div>
        </td>
        <td class="text-center">
            <%= group.owner.nil? ? " " : 
            group.owner.lastname + 
            ', ' + group.owner.firstname%>
        </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <th colspan="6">
        <div class="row">  
          <div class="ui two column grid">
            <div class="column">
              <div class="info-pagination">
                <%= page_entries_info @groups_all %>
              </div>
              <%= will_paginate @groups_all %>
            </div>
            <div class="column right aligned">
              <%= link_to '<i class="plus icon"></i> New Ticket Category'.html_safe(), 
                new_group_path, { :class => "ui small teal icon labeled button"} %>
            </div>
          </div>
        </div>
      </th>
    </tr>
  </tfoot>
</table>